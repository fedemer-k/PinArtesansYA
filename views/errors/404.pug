extends ../layout

block content
  .error-container
    .error-card
      .error-icon
        i.fas.fa-exclamation-circle
      h1.error-title 404
      h2.error-subtitle Página no encontrada
      p.error-message= message || "Lo sentimos, la página que estás buscando no existe o ha sido movida."
      .error-actions
        a.primary-btn(href="/") Volver al inicio
